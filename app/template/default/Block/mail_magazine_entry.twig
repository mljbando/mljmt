{% form_theme form 'Form/form_div_layout.twig' %}

<div class="ec-registerRole">
    <div class="ec-secHeading">
        <h3 class="ec-heading">{{ 'mail_magazine_member.entry.title'|trans }}</h3>
    </div>
    <div class="ec-off1Grid">
        <form method="post" action="{{ url('mail_magazine_entry') }}" novalidate>
            {{ form_widget(form._token) }}
            <dl>
                <dt>
                    <label class="ec-label">
                        {{ form_label(form.email, 'common.mail_address') }}
                    </label>
                </dt>
                <dd>
                    <div class="ec-checkbox">
                        <div class="ec-input">
                            {{ form_widget(form.email.first, { 'attr': { 'placeholder': 'common.mail_address_sample' }}) }}
                            {{ form_errors(form.email.first) }}
                        </div>
                        <div class="ec-input">
                            {{ form_widget(form.email.second, { 'attr': { 'placeholder': 'common.repeated_confirm' }}) }}
                            {{ form_errors(form.email.second) }}
                        </div>
                    </div>
                </dd>
                <dt>
                    <label class="ec-label">
                        {{ form_widget(form.user_policy_check) }}
                        {{ 'front.entry.agree_with_terms'|trans({ '%url%': url('help_agreement') })|raw }}
                    </label>
                </dt>
                <dd>
                    <div>
                        <button class="ec-blockBtn--action" type="submit" name="mode"
                                value="confirm">{{ 'front.entry.agree'|trans }}</button>
                    </div>
                    <div class="ec-text-ac" style="margin-top: 20px;">
                        <a class="ec-link"
                           href="{{ url('mail_magazine_withdraw') }}">{{ 'mail_magazine_member.entry.to_withdraw'|trans }}</a>
                    </div>
                </dd>
            </dl>
        </form>
    </div>
</div>
