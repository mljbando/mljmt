{% set Categories = ExistsCategoryList() %}

{% macro tree(Category) %}
    {% from _self import tree %}
    <a href="{{ url('product_list') }}?category_id={{ Category.id }}"><button><img class="caticon" src="/html/user_data/assets/img/category/icon_{{ Category.id }}.svg"><p>{{ Category.name }}</p></button></a>
{% endmacro %}
